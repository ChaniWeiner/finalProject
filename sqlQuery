

CREATE TABLE  db_fp.users (
    ID INT AUTO_INCREMENT PRIMARY KEY,
   userId INT UNIQUE NOT NULL,
    userName VARCHAR(20) NOT NULL,
    address VARCHAR(30) NOT NULL,
    region VARCHAR(10) NOT NULL
);

CREATE TABLE db_fp.passwords (
    userId INT NOT NULL,
    password VARCHAR(10) NOT NULL,
    PRIMARY KEY (userId),
    UNIQUE INDEX userId_UNIQUE (userId ASC) VISIBLE,
    FOREIGN KEY (userId) REFERENCES db_fp.users(userId)
);

CREATE TABLE db_fp.proposalRequests (
    requestId INT AUTO_INCREMENT PRIMARY KEY,
    userId INT NOT NULL,
    requestType VARCHAR(15) NOT NULL,
    FOREIGN KEY (userId) REFERENCES users(userId)
);

CREATE TABLE db_fp.meals (
    mealId INT AUTO_INCREMENT PRIMARY KEY,
    requestId INT NOT NULL,
    amountMeals INT NOT NULL,
    mealType VARCHAR(15) NOT NULL,
    FOREIGN KEY (requestId) REFERENCES proposalRequests(requestId)
);